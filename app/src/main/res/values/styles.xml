<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //Button Style
    <style name="ButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/button_shape_capsule</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorLightGray</item>
        <item name="android:actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
    </style>

</resources>
