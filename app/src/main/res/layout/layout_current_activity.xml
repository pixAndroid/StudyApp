<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_white_gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_latest_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Current Activity"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorBlue"
            android:layout_marginLeft="20dp" />
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_arrow1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingStart="5dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/shape_angel"
                android:layout_marginLeft="40dp"
                android:paddingLeft="5dp" />
            <TextView
                android:id="@+id/txt_latest_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Started Yet!"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/img_arrow1"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorGray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_post_name_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/img_arrow2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingStart="5dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="45dp"
                android:src="@drawable/shape_angel"
                android:layout_marginLeft="45dp"
                android:paddingLeft="5dp" />
            <TextView
                android:id="@+id/txt_current_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="post name."
                android:textSize="16sp"
                android:layout_toRightOf="@+id/img_arrow2"
                android:singleLine="true"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_go_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Go"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/circle_shape_green"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhiteText"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</RelativeLayout>