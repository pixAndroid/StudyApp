<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="5dp">
    <RelativeLayout
        android:id="@+id/layout_main_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/card_layout_background"

        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/img_lessons"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tmp"
            android:elevation="5dp"
            android:padding="15dp"
            android:background="@drawable/circle_shape"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_main_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_lessons"
            android:fontFamily="@font/open_sans"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="title"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_main_item_descriptions"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_main_item_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_lessons"
            android:fontFamily="@font/open_sans"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:text="descriptions"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/txt_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_main_item_descriptions"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_lessons"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorPrimaryDark"
            android:text="Not Started"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/pb_lessons"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:progress="0"
            android:progressDrawable="@drawable/pb_small_circular"
            style="?android:attr/progressBarStyleHorizontal"
            android:secondaryProgress="100"
            android:indeterminate="false"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/txt_lessons_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_main_item_descriptions"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/txt_activities_no"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto"
            android:text="Lesson 01"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_activities_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_main_item_descriptions"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="Activities 17"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

</RelativeLayout>